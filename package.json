{
  "name": "node-poker-server",
  "version": "1.0.0",
  "description": "Sytac Hackathon 2025",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "dev:nodemon": "nodemon --exec tsx server.ts",
    "client": "cd client && npm run dev",
    "client-build": "cd client && npm run build",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [],
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.30",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "prisma": "^6.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "author": "Sytac",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  }
}
